{
  "name": "j-vicinae-extensions",
  "version": "1.0.0",
  "description": "Monorepo for Vicinae extensions made by me (Dagim G. Astatkie)",
  "private": true,
  "workspaces": [
    "extensions/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:ext": "pnpm --filter",
    "dev": "pnpm -r dev",
    "dev:ext": "pnpm --filter",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "@types/react": "^18.2.0",
    "@types/node": "^20.0.0",
    "@biomejs/biome": "2.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
